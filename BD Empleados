CREATE DATABASE DIRECTIVO

CREATE TABLE DIRECTIVO(

NUM_EMPLEADO INT IDENTITY(1, 1),
NOMBRE VARCHAR (50) NOT NULL,
APELLIDO_PAT VARCHAR (50) NOT NULL,
APELLIDO_MAT VARCHAR (50) NOT NULL,
FECHA_NAC DATE NOT NULL,
RFC AS (UPPER (SUBSTRING (APELLIDO_PAT, 1, 2) + SUBSTRING (APELLIDO_MAT, 1, 1)
+ SUBSTRING (NOMBRE, 1, 1) +
FORMAT (FECHA_NAC, 'aaMMdd'))),
NUM_CENTRO INT NOT NULL,
PUESTO VARCHAR (50) NOT NULL,
DESC_PUESTO VARCHAR(200) NOT NULL,
DIRECTIVA BIT NOT NULL,
NUM_CENTRO_SUPERVISAR INT PRIMARY KEY,
PREST_COMBUSTIBLE BIT
);

INSERT INTO DIRECTIVO(NOMBRE, APELLIDO_PAT, APELLIDO_MAT, FECHA_NAC, NUM_CENTRO, PUESTO, DESC_PUESTO, DIRECTIVA, NUM_CENTRO_SUPERVISAR, PREST_COMBUSTIBLE)
VALUES
