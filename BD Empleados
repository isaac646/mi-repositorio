CREATE DATABASE EMPLEADOS
USE EMPLEADOS
CREATE TABLE EMPLEADOS (
NUM_EMPLEADO INT PRIMARY KEY IDENTITY(1,1),
NOMBRE VARCHAR (50) NOT NULL,

APELLIDO_PAT VARCHAR (50) NOT NULL,

APELLIDO_MAT VARCHAR (50) NOT NULL,

FECHA_NAC DATE NOT NULL,

RFC AS (UPPER (SUBSTRING (APELLIDO_PAT,1,2) + SUBSTRING (APELLIDO_MAT, 1, 1)

+SUBSTRING (NOMBRE,1,1) +

FORMAT (FECHA_NAC, 'yyMMdd'))),

CENTRO_TRABAJO VARCHAR (50) NOT NULL,

PUESTO VARCHAR (50) NOT NULL,

DESC_PUESTO VARCHAR (200),

DIRECTIVO BIT NOT NULL
);

INSERT INTO EMPLEADOS (NOMBRE, APELLIDO_PAT, APELLIDO_MAT, FECHA_NAC, CENTRO_TRABAJO, PUESTO, DESC_PUESTO, DIRECTIVO) 
VALUES
('ISAAC ISRAEL', 'GUTIERREZ', 'MARTINEZ', '2000-02-22', 'MISION', 'ASESOR DE TIENDA', 'VENTA DE ARTICULOS', 0),
('MARIA', 'MOJICA', 'GARCIA', '1995-11-03', 'JUAREZ', 'PROMOTORA', 'VENTA DE ARTICULOS', 0),
('MARTIN', 'GARCIA', 'GARCIA', '1999-02-14', 'PLAZA JUAN', 'ASESOR', 'VENTA DE ARTICULOS', 0),
